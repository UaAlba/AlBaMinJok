<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="30dp"
tools:context=".JoinMemberFirst"

>
<TextView android:layout_width="match_parent" android:layout_height="match_parent"
          android:text="회 원 가 입"
          android:textAlignment="center"
          android:textSize="20dp"
          android:id="@+id/login"

/>






    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@id/login"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:id="@+id/Name"

    >
        <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/img_Name"
                android:src="@drawable/man"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_Name"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:layout_marginLeft="10dp"
                android:hint="이름을  입력해주세요"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_alignParentStart="true"

            android:layout_below="@id/Name"
            android:id="@+id/pwd">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/img_pwd"
                android:src="@drawable/password"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_1"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:layout_marginLeft="10dp"
                android:hint="비밀번호를 입력해주세요"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_alignParentStart="true"

            android:layout_below="@id/pwd"
            android:id="@+id/pwd2">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/img_pwd2"
                android:src="@drawable/password"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_2"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:layout_marginLeft="10dp"
                android:hint="비밀번호를 다시 한 번 입력해주세요"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_alignParentStart="true"

            android:layout_below="@id/pwd2"
            android:id="@+id/TelNum">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/img_TelNum"
                android:src="@drawable/telephone"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_TelNum"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"

                android:layout_marginLeft="10dp"
                android:hint="핸드폰번호를 입력해주세요"
        />
    </LinearLayout>

<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TelNum"
        android:id="@+id/nextPage"
        android:text="다음 페이지"
        android:gravity="center"
/>

</RelativeLayout>